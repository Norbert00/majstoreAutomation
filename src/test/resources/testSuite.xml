<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="All Majstore Tests" parallel="tests" thread-count="2">

    <test name="CheckingCorrectUrlTest">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.CheckingCorrectUrlTest"/>
        </classes>
    </test>

    <test name="Failed Login Tests">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.FailedLoginTest"/>
        </classes>
    </test>

    <test name="Positive Login Tests">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.PositiveLoginTest"/>
        </classes>
    </test>

    <test name="Add product to Cart">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.AddProductToCartTest"/>
        </classes>
    </test>

</suite>