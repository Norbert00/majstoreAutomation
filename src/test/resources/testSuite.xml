<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="All Majstore Tests" parallel="tests" thread-count="2">

    <test name="CheckingCorrectUrlTest">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.gui.CheckingCorrectUrlTest"/>
        </classes>
    </test>

    <test name="Failed Login Tests">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.gui.FailedLoginTest"/>
        </classes>
    </test>

    <test name="Positive Login Tests">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.gui.PositiveLoginTest"/>
        </classes>
    </test>

    <test name="Add product to Cart">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.gui.AddProductToCartTest"/>
        </classes>
    </test>

    <test name="Add cute price on Cart page">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.gui.CutPriceTest"/>
        </classes>
    </test>

    <test name="Negative get product test">
        <classes>
            <class name="tests.api.NegativeGetProductTest"/>
        </classes>
    </test>

    <test name="Positive get product test">
        <classes>
            <class name="tests.api.PositiveGetProductTest"/>
        </classes>
    </test>

    <test name="Positive send post method and create new product test">
        <classes>
            <class name="tests.api.NewProductApiTest"/>
        </classes>
    </test>

    <test name="Positive send delete method and delete selected product">
        <classes>
            <class name="tests.api.DeleteProductApiTest"/>
        </classes>
    </test>


</suite>